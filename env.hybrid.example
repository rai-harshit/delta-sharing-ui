# ============================================
# Delta Sharing UI - Hybrid Mode Configuration
# ============================================
# 
# This file contains configuration for hybrid deployment mode,
# which uses the OSS Delta Sharing Server for protocol handling.
#
# Copy this file to .env and update the values:
#   cp env.hybrid.example .env
#

# ===================
# Database Settings
# ===================
POSTGRES_USER=delta_sharing
POSTGRES_PASSWORD=change-me-to-secure-password
POSTGRES_DB=delta_sharing

# ===================
# Security Settings
# ===================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# ===================
# Hybrid Mode Settings
# ===================
# Enable hybrid mode (uses OSS Delta Sharing Server for protocol)
HYBRID_MODE=true

# Delta Sharing endpoint URL (what recipients see in credential files)
# In production, set this to your public domain
DELTA_SHARING_ENDPOINT=https://your-domain.com/delta

# OSS Server URL (internal, for health checks)
OSS_SERVER_URL=http://delta-sharing-oss:8080

# ===================
# Port Configuration
# ===================
HTTP_PORT=80
HTTPS_PORT=443

# ===================
# Cloud Storage Credentials
# ===================
# These are passed to both Admin Backend and OSS Server

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
# Alternative: use connection string
AZURE_STORAGE_CONNECTION_STRING=

# Google Cloud Storage
GCS_PROJECT_ID=
# For GCS, place your service account JSON at: ./nginx/certs/gcs-credentials.json
# and it will be mounted to the OSS server

# ===================
# CORS Settings
# ===================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGIN=*

# ===================
# Audit Settings (Optional)
# ===================
# Enable audit log processing from nginx to database
PROCESS_AUDIT_LOGS=false
AUDIT_LOG_PATH=/var/log/nginx/delta_audit.log











